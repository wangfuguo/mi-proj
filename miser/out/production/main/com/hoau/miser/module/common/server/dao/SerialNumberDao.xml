<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
	"-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hoau.miser.module.common.server.dao.SerialNumberDao">
  
	<resultMap type="com.hoau.miser.module.common.shared.domain.SerialNumberRuleEntity" id="serialNumberMap">
        <result column="ID"   property="id"  jdbcType="VARCHAR" />
        <result column="CODE" property="code"  jdbcType="VARCHAR" />
        <result column="NAME" property="name"  jdbcType="VARCHAR" />
        <result column="CURRENT_TIME" property="currentTime" jdbcType="TIMESTAMP" />
        <result column="CURRENT_NUM" property="currentNum" jdbcType="NUMERIC" />
	</resultMap>
	<sql id="query_param">
	    ID,
	    CODE, 
	    NAME, 
	    CURRENT_TIME, 
	    CURRENT_NUM
	</sql>
  	<select id="querySerialNumberRuleForUpdate" resultMap="serialNumberMap" parameterType="string">
  	    SELECT 
  	    <include refid="query_param"></include>
  	    FROM T_BSE_SERIAL_NUMBER_RULE
  	    WHERE CODE = #{code,jdbcType=VARCHAR} FOR UPDATE 
  	</select>
  	<select id="querySerialNumberRule" resultMap="serialNumberMap" parameterType="string">
  	    SELECT 
  	    <include refid="query_param"></include>
  	    FROM T_BSE_SERIAL_NUMBER_RULE
  	    WHERE CODE = #{code,jdbcType=VARCHAR}
  	</select>
	<insert id="addSerialNumberRule" parameterType="com.hoau.miser.module.common.shared.domain.SerialNumberRuleEntity">
	    INSERT INTO T_BSE_SERIAL_NUMBER_RULE
	    (ID,
	    CODE, 
	    NAME, 
	    CURRENT_TIME, 
	    CURRENT_NUM)
  		VALUES 
  		(#{id,jdbcType=VARCHAR},
  		#{code,jdbcType=VARCHAR}, 
  		#{name,jdbcType=VARCHAR},
  		#{currentTime,jdbcType=TIMESTAMP}, 
  		#{currentNum,jdbcType=NUMERIC})
	</insert>
	<update id="updateSerialNumberRule" parameterType="com.hoau.miser.module.common.shared.domain.SerialNumberRuleEntity">
	    UPDATE T_BSE_SERIAL_NUMBER_RULE
	    SET 
	    CURRENT_TIME = #{currentTime,jdbcType=TIMESTAMP},
	    CURRENT_NUM = #{currentNum,jdbcType=NUMERIC}
	    WHERE CODE = #{code,jdbcType=VARCHAR}
	</update>
</mapper>